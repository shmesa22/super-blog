<div class="container">
  <h1>Crea un nuevo usuario</h1>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.email_field :email, placeholder: "Correo electrónico", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: "Contraseña", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Crear Usuario", class: "btn btn-primary pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>