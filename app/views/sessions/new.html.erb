<div class="container">
  <h1>Ingresar</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <ul>
        <li><%= flash[:alert] %></li>
      </ul> 
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <%= form_tag(controller: :sessions, action: :create) do %>
        <div class="form-group">
          <%= email_field_tag(:email, nil, class: "form-control", placeholder: "Correo electrónico") %>
        </div>
        <div class="form-group">
          <%= password_field_tag(:password, nil, class: "form-control", placeholder: "Contraseña") %>
        </div>
        <div class="form-group">
          <%= submit_tag("Ingresar", class: "btn btn-primary pull-right") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
